<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="urn:ru:rt:hrms:common"
           targetNamespace="urn:ru:rt:hrms:common">
  <!--СТАТУС СОБЫТИЯ -->
  <xs:simpleType name="tStatus">
    <xs:annotation>
      <xs:documentation>Статус события</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:enumeration value="A">
        <xs:annotation>
          <xs:documentation>Активировать значение на стороне приемнике</xs:documentation>
        </xs:annotation>
      </xs:enumeration>
      <xs:enumeration value="D">
        <xs:annotation>
          <xs:documentation>Деактивировать значение на стороне приемнике</xs:documentation>
        </xs:annotation>
      </xs:enumeration>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>